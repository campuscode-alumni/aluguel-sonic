<% if flash[:message] %>
  <div class="success"><%= flash[:message] %></div>
<% end %>


<h1><%= @property.title %></h1>
<p>Descrição: <%= @property.description %></p>
<p>Localidade: <%= @property.property_location %></p>
<h2>Detalhes</h2>
<p>Tamanho: <%= @property.area %> m2</p>
<p>Tipo do imóvel: <%= @property.property_type %></p>
<p>Quantidade de quartos: <%= @property.rooms %></p>
<p>Máximo de pessoas: <%= @property.maximum_occupancy %></p>
<p>Mínimo de dias para locação: <%= @property.minimum_rent_days %></p>
<p>Máximo de dias para locação: <%= @property.maximum_rent_days %></p>
<p>Valor padrão da diária: <%= number_to_currency(@property.daily_rate, unit: "R$ ", separator: ",", delimiter: "") %></p>
<p>Regras de uso: <%= @property.usage_rules %></p>
<h3>Foto do local</h3>
<%= @property.photo %>

<h3>Temporadas cadastradas:</h3>
<div class="row-fluid">
  <% @property.seasons.each do |season| %>
    <div class="col-md-4">
      <h4><%= season.name %></h4>
      <dl>
        <dt>Data início</dt> <dd>01/07/2018</dd>
        <dt>Data fim</dt> <dd>30/07/2018</dd>
        <dt>Preço da diaria</dt> <dd>R$ 150,00</dd>
      </dl>
    </div>
  <% end %>
</div>


<%= link_to 'Enviar proposta', new_property_proposal_path(@property) %>
<%= link_to 'Cadastrar preço especifico para uma temporada', new_property_season_path(@property) %>
