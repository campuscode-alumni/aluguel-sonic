<%= form_for @property do |f| %>
  <%= f.label :title, 'Nome' %>
  <%= f.text_field :title %>

  <%= f.label :location, 'Local' %>
  <%= f.text_field :location %>

  <%= f.label :area, 'Tamanho (m2)' %>
  <%= f.text_field :area %>

  <%= f.label :description, 'Descrição' %>
  <%= f.text_area :description %>

  <%= f.label :daily_rate, 'Valor padrão da diária' %>
  <%= f.number_field :daily_rate %>

  <%= f.label :rooms, 'Quantidade de quartos' %>
  <%= f.number_field :rooms %>

  <%= f.label :minimum_rent_days, 'Mínimo de dias para locação' %>
  <%= f.number_field :minimum_rent_days %>

  <%= f.label :maximum_rent_days, 'Máximo de dias para locação' %>
  <%= f.number_field :maximum_rent_days %>

  <%= f.label :photo, 'Foto' %>
  <%= f.text_field :photo %>

  <%= f.label :maximum_occupancy, 'Máximo de pessoas' %>
  <%= f.number_field :maximum_occupancy %>

  <%= f.label :usage_rules, 'Regras de uso' %>
  <%= f.text_area :usage_rules %>

  <%= f.label :property_type, 'Tipo do Imóvel' %>
  <%= f.text_field :property_type %>

  <%= f.submit 'Enviar' %>
<% end %>
