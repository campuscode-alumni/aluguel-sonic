<% if @season.errors.any? %>
  <% @season.errors.full_messages.each do |msg| %>
    <div class="error alert alert-danger"><%= msg %></div>
  <% end %>
<% end %>

<%= form_for [@property, @season] do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, 'Data início' %>
    <%= f.text_field :start_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, 'Data fim' %>
    <%= f.text_field :end_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :daily_rate, 'Preço da diaria' %>
    <%= f.number_field :daily_rate, class: 'form-control' %>
  </div>

  <%= f.submit 'Registrar temporada', class: 'btn btn-default' %>

<% end %>
