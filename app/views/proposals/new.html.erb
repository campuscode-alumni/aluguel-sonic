<h1>Enviar proposta</h1>

<% if @proposal.errors.any? %>
  <% @proposal.errors.full_messages.each do |msg| %>
    <div class="error"><%= msg %></div>
  <% end %>
<% end %>

<%= form_for([@property, @proposal]) do |f| %>
  <legend>Formulário de envio de proposta</legend>
  <div class="form-group">
    <%= f.label :user_name, 'Nome da pessoa' %>
    <%= f.text_field :user_name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, 'Data inicio' %>
    <%= f.text_field :start_date, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, 'Data fim' %>
    <%= f.text_field :end_date, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :total_guests, 'Quantidade de pessoas' %>
    <%= f.number_field :total_guests, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rent_purpose, 'Proposito da Locação' %>
    <%= f.text_area :rent_purpose, class:'form-control' %>
  </div>
  <div class="form-group form-check">
    <%= f.label(:agree_with_rules, class: 'form-check-label') do %>
      <%= f.check_box :agree_with_rules, class: "form-check-input" %>
      Concordar com as regras
    <% end %>
  </div>


  <%= f.submit 'Enviar', class: "btn btn-primary" %>
<% end %>
