  <%= image_tag property.photo, class: 'card-img-top' %>
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= link_to property.title, property %></h3>
      <dl>
        <dt>Tipo da propriedade:</dt>
        <dd> <%= property.property_type %></dd>
        <dt>Localidade:</dt>
        <dd> <%= property.property_location %></dd>
        <dt>Descrição:</dt>
        <dd> <%= property.description %></dd>
        <dt>Área:</dt>
        <dd> <%= property.area %>m2</dd>
        <dt>Preço da diaria:</dt>
        <dd class="badge badge-success"> <%= number_to_currency(property.daily_rate, unit: "R$ ", separator: ",", delimiter: "") %></dd>
      </dl>
    </div>
    <div class="card-body">
      <%= link_to 'Ver detalhes', property, class:'card-link btn btn-primary' %>
    </div>
  </div>
